<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/first_fragment">

    <fragment
        android:id="@+id/first_fragment"
        android:name="com.danp1925.navigationmigration.FirstFragment"
        android:label="First"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_first_to_second"
            app:destination="@id/second_fragment">

            <argument
                android:name="string_argument"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_first_to_third"
            app:destination="@id/third_fragment" />

    </fragment>

    <fragment
        android:id="@+id/second_fragment"
        android:name="com.danp1925.navigationmigration.SecondFragment"
        android:label="Second"
        tools:layout="@layout/fragment_second">

        <argument
            android:name="string_argument"
            app:argType="string" />

        <action
            android:id="@+id/action_second_to_third"
            app:destination="@id/third_fragment" />

    </fragment>

    <fragment
        android:id="@+id/third_fragment"
        android:name="com.danp1925.navigationmigration.ThirdFragment"
        android:label="Third"
        tools:layout="@layout/fragment_third">

        <argument
            android:name="number_argument"
            app:argType="integer" />

    </fragment>

</navigation>